<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">

	<LinearLayout
        android:id="@+id/CustomContainer"
        android:layout_width="500dp"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >
	</LinearLayout>

    <SurfaceView
        android:id="@+id/surView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignRight="@+id/CustomContainer"
        android:layout_alignBottom="@id/CustomContainer"
        android:layout_marginRight="-40dp"
        android:layout_marginBottom="-20dp"/>
    
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/CustomContainer"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/stopV"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop"
            android:background="@drawable/loginbt_back" />

        <Button
            android:id="@+id/startV"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start" 
            android:background="@drawable/loginbt_back"/>

        <Button
            android:id="@+id/receive"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Receive" 
            android:background="@drawable/loginbt_back"/>
        <TextView
	        android:id="@+id/StatusTextV"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:text="call status"/>
    </LinearLayout>
	
</RelativeLayout>